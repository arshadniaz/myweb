pipeline {
    agent any
    stages {
        stage('git repo & clean') {
            steps {
               sh "rm ticketbooking"
                sh "git https://github.com/arshadniaz/myweb.git"
                sh "mvn clean -f ticketbooking"
            }
        }
        stage('install') {
            steps {
                sh "mvn install -f ticketbooking"
            }
        }
        stage('test') {
            steps {
                sh "mvn test -f ticketbooking"
            }
        }
        stage('package') {
            steps {
                sh "mvn package -f ticketbooking"
            }
        }
    }
}
